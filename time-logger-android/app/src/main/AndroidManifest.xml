<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="timelogger.mprtcz.com.timelogger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.TasksListActivity"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity android:name=".activities.AddTaskActivity" />
        <activity android:name=".activities.AddRecordActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".activities.DateTimePickActivity" />
        <activity android:name=".activities.GraphicDataActivity" />
        <activity
            android:name=".activities.SettingsListActivity"
            android:configChanges="layoutDirection|locale" />
        <activity android:name=".activities.SyncingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>