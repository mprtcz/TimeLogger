<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_graphic_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="timelogger.mprtcz.com.timelogger.activities.GraphicDataActivity"
    android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/dataGraphicTextView"
    android:text="@string/recordsRepresentationText"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sliderTitleTextView"
            android:text="@string/sliderTitleText"
            android:layout_marginEnd="20dp"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" />

    </LinearLayout>
    <timelogger.mprtcz.com.timelogger.graphics.views.GraphicView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="50dp"
        android:id="@+id/graphicViewElement" />
</LinearLayout>
